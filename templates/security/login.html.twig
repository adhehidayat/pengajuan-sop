{% block main %}
    <div class="container">
        <div class="left-panel">
            <div class="logo"></div>
            <h1>GASPUL</h1>
            <h3>Kementerian Agama Provinsi Sulawesi Barat </h3>
            <p>Sistem Informasi Terpadu Kementerian Agama Republik Indonesia</p>
